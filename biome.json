{
  "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/node_modules",
      "!**/dist",
      "!**/.next",
      "!**/coverage",
      "!**/*.spec.ts",
      "!**/*.test.ts",
      "!**/*.e2e-spec.ts",
      "!**/test",
      "!**/tests"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noExcessiveCognitiveComplexity": "off",
        "noForEach": "off",
        "noUselessConstructor": "off"
      },
      "style": {
        "noParameterAssign": "off",
        "useImportType": "off",
        "useNodejsImportProtocol": "warn",
        "noNonNullAssertion": "warn"
      },
      "suspicious": {
        "noExplicitAny": "warn",
        "noArrayIndexKey": "off",
        "noAssignInExpressions": "warn",
        "useIterableCallbackReturn": "warn",
        "noImplicitAnyLet": "warn",
        "noConfusingVoidType": "error",
        "noDoubleEquals": "error"
      },
      "correctness": {
        "noUnusedVariables": "error",
        "noUnusedPrivateClassMembers": "off",
        "noUnusedFunctionParameters": "warn",
        "noUnusedImports": "error",
        "useExhaustiveDependencies": "warn"
      }
    }
  },
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    },
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always",
      "trailingCommas": "all",
      "arrowParentheses": "always"
    }
  },
  "overrides": [
    {
      "includes": ["src/bounded-contexts/ats-validation/**/*.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noControlCharactersInRegex": "off"
          }
        }
      }
    },
    {
      "includes": ["scripts/**/*.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noAssignInExpressions": "off"
          }
        }
      }
    },
    {
      "includes": [
        "**/*.spec.ts",
        "**/*.test.ts",
        "**/*.e2e-spec.ts",
        "**/__mocks__/**",
        "test/**",
        "tests/**"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          },
          "correctness": {
            "noUnusedVariables": "warn"
          }
        }
      }
    }
  ],
  "assist": { "actions": { "source": { "organizeImports": "on" } } }
}
