{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".smoke.spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "transformIgnorePatterns": [
    "node_modules/(?!uuid)"
  ],
  "setupFilesAfterEnv": ["<rootDir>/smoke/setup.ts"],
  "testTimeout": 30000,
  "verbose": true
}
