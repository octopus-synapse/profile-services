# Test Environment Configuration
NODE_ENV="test"
PORT=3001
LOG_LEVEL="error"

# Test Database (use a separate test database)
# Uses docker-compose.test.yml ports: postgres:5433, redis:6380
DATABASE_URL="postgresql://postgres:postgres@localhost:5433/profile_test?schema=public"

# JWT
JWT_SECRET="test-secret-key-for-integration-tests-min-32-chars"
JWT_EXPIRATION="7d"

# Redis (for testing)
REDIS_HOST="localhost"
REDIS_PORT=6380
REDIS_PASSWORD=""

# MinIO S3-compatible storage (optional - disabled for tests)
MINIO_ENDPOINT=""
MINIO_ACCESS_KEY=""
MINIO_SECRET_KEY=""
MINIO_BUCKET=""

# Frontend
FRONTEND_URL="http://localhost:3000"
