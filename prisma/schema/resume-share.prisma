// Resume Share - Public sharing with custom slugs

model ResumeShare {
  id        String   @id @default(cuid())
  resumeId  String
  resume    Resume   @relation("ResumeShares", fields: [resumeId], references: [id], onDelete: Cascade)
  
  slug      String   @unique
  password  String?  // bcrypt hashed
  expiresAt DateTime?
  isActive  Boolean  @default(true)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  analytics ShareAnalytics[]
  
  @@index([resumeId])
  @@index([slug])
  @@map("resume_shares")
}
