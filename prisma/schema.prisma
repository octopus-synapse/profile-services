// MEC DATA - Brazilian Higher Education Institutions and Courses
// Synchronized weekly from MEC's open data portal
// =============================================================================

model MecInstitution {
  id                String   @id @default(cuid())

  // Official MEC identifiers (used for idempotency)
  codigoIes         Int      @unique  // C√≥digo da IES no MEC
  codigoMunicipio   Int?              // C√≥digo IBGE do munic√≠pio

  // Institution data
  nome              String            // Nome da institui√ß√£o
  sigla             String?           // Sigla (ex: USP, UNICAMP)
  organizacao       String?           // Organiza√ß√£o acad√™mica (Universidade, Centro Universit√°rio, etc.)
  categoria         String?           // Categoria administrativa (P√∫blica, Privada)

  // Location
  uf                String            // Estado (UF)
  municipio         String?           // Nome do munic√≠pio

  // Status
  isActive          Boolean  @default(true)

  // Relationships
  courses           MecCourse[]

  // Timestamps
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([nome])
  @@index([sigla])
  @@index([uf])
  @@index([categoria])
  @@index([isActive])
  @@index([codigoMunicipio])
}

model MecCourse {
  id                  String   @id @default(cuid())

  // Official MEC identifiers (used for idempotency)
  codigoCurso         Int      @unique  // C√≥digo do curso no MEC
  codigoIes           Int               // FK para institui√ß√£o

  // Course data
  nome                String            // Nome do curso
  grau                String?           // Grau (Bacharelado, Licenciatura, Tecnol√≥gico)
  modalidade          String?           // Modalidade (Presencial, EaD)

  // Additional info
  areaConhecimento    String?           // √Årea de conhecimento
  cargaHoraria        Int?              // Carga hor√°ria total

  // Status
  situacao            String?           // Situa√ß√£o do curso (Em atividade, Extinto, etc.)
  isActive            Boolean  @default(true)

  // Relationships
  institution         MecInstitution @relation(fields: [codigoIes], references: [codigoIes])

  // Timestamps
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@index([nome])
  @@index([codigoIes])
  @@index([grau])
  @@index([modalidade])
  @@index([areaConhecimento])
  @@index([isActive])
  @@index([situacao])
}

enum MecSyncStatus {
  RUNNING
  SUCCESS
  FAILED
  PARTIAL
}

model MecSyncLog {
  id                  String        @id @default(cuid())

  // Sync metadata
  status              MecSyncStatus
  startedAt           DateTime      @default(now())
  completedAt         DateTime?

  // Results
  institutionsInserted Int          @default(0)
  institutionsUpdated  Int          @default(0)
  coursesInserted      Int          @default(0)
  coursesUpdated       Int          @default(0)

  // Error tracking
  errorMessage        String?       @db.Text
  errorDetails        Json?

  // Source info
  sourceUrl           String?
  sourceFileSize      Int?          // bytes
  totalRowsProcessed  Int?

  // Triggered by
  triggeredBy         String?       // "cron", "manual", "api"

  createdAt           DateTime      @default(now())

  @@index([status])
  @@index([startedAt])
  @@index([createdAt])
}

// ===========================================
// Tech Skills Catalog (Pre-populated data)
// ===========================================

enum TechAreaType {
  DEVELOPMENT
  DEVOPS
  DATA
  SECURITY
  DESIGN
  PRODUCT
  QA
  INFRASTRUCTURE
  OTHER
}

enum SkillType {
  LANGUAGE        // Programming languages (JavaScript, Python, etc.)
  FRAMEWORK       // Frameworks (React, Django, Spring, etc.)
  LIBRARY         // Libraries (Lodash, Axios, etc.)
  DATABASE        // Databases (PostgreSQL, MongoDB, etc.)
  TOOL            // Tools (Git, Docker, VS Code, etc.)
  PLATFORM        // Platforms (AWS, Azure, Vercel, etc.)
  METHODOLOGY     // Methodologies (Agile, Scrum, etc.)
  SOFT_SKILL      // Soft skills (Communication, Leadership, etc.)
  CERTIFICATION   // Certifications (AWS Certified, etc.)
  OTHER           // Other skills
}

// Tech Area (Development, DevOps, Data, etc.)
model TechArea {
  id              String        @id @default(cuid())
  type            TechAreaType  @unique
  
  // Translations
  nameEn          String        // English name
  namePtBr        String        // Portuguese name
  descriptionEn   String?       // English description
  descriptionPtBr String?       // Portuguese description
  
  icon            String?       // Icon identifier (e.g., "code", "server", "database")
  color           String?       // Hex color for UI
  order           Int           @default(0)
  isActive        Boolean       @default(true)
  
  niches          TechNiche[]
  
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  
  @@index([type])
  @@index([order])
  @@index([isActive])
}

// Tech Niche (Backend, Frontend, Mobile, etc.)
model TechNiche {
  id              String        @id @default(cuid())
  slug            String        @unique  // e.g., "backend", "frontend", "mobile"
  
  // Translations
  nameEn          String
  namePtBr        String
  descriptionEn   String?
  descriptionPtBr String?
  
  icon            String?
  color           String?
  order           Int           @default(0)
  isActive        Boolean       @default(true)
  
  // Relations
  areaId          String
  area            TechArea      @relation(fields: [areaId], references: [id], onDelete: Cascade)
  skills          TechSkill[]
  
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  
  @@index([areaId])
  @@index([slug])
  @@index([order])
  @@index([isActive])
}

// Tech Skill Catalog (Pre-populated skills)
model TechSkill {
  id              String        @id @default(cuid())
  slug            String        @unique  // e.g., "javascript", "react", "docker"
  
  // Translations
  nameEn          String        // Display name in English
  namePtBr        String        // Display name in Portuguese
  descriptionEn   String?
  descriptionPtBr String?
  
  type            SkillType     @default(OTHER)
  
  // Metadata
  icon            String?       // Icon URL or identifier
  color           String?       // Brand color (hex)
  website         String?       // Official website
  
  // Categorization
  nicheId         String?
  niche           TechNiche?    @relation(fields: [nicheId], references: [id], onDelete: SetNull)
  
  // Search optimization
  aliases         String[]      // Alternative names (e.g., ["JS", "ECMAScript"] for JavaScript)
  keywords        String[]      // Search keywords
  
  // Popularity/ordering
  popularity      Int           @default(0)  // For sorting by popularity
  order           Int           @default(0)
  isActive        Boolean       @default(true)
  
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  
  @@index([nicheId])
  @@index([type])
  @@index([slug])
  @@index([popularity])
  @@index([order])
  @@index([isActive])
}

// ===========================================
// Spoken Languages Catalog (Pre-populated data)
// Languages for resume language selection
// ===========================================

model SpokenLanguage {
  id              String   @id @default(cuid())
  code            String   @unique  // ISO 639-1 code (e.g., "en", "pt", "es")

  // Translations for the language name
  nameEn          String   // Name in English
  namePtBr        String   // Name in Portuguese (Brazil)
  nameEs          String   // Name in Spanish

  // Native name (e.g., "Deutsch" for German)
  nativeName      String?

  // Ordering and status
  order           Int      @default(0)
  isActive        Boolean  @default(true)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([code])
  @@index([order])
  @@index([isActive])
}

// Programming Languages Catalog (separate for better organization)
model ProgrammingLanguage {
  id              String        @id @default(cuid())
  slug            String        @unique  // e.g., "javascript", "python"
  
  // Translations
  nameEn          String
  namePtBr        String
  descriptionEn   String?
  descriptionPtBr String?
  
