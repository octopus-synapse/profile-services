// =============================================================================
// THEME SYSTEM
// Users can create custom themes, personalize existing ones, and publish themes
// Published themes require approval from users with APPROVER role
// =============================================================================

enum ThemeStatus {
  DRAFT              // Work in progress, not usable
  PRIVATE            // Usable only by the author
  PENDING_APPROVAL   // Submitted for public publication, awaiting review
  PUBLISHED          // Approved and publicly available
  REJECTED           // Rejected by approver, author can edit and resubmit
}

enum ThemeCategory {
  PROFESSIONAL
  CREATIVE
  TECHNICAL
  ACADEMIC
  MINIMAL
  MODERN
  CLASSIC
  EXECUTIVE
}

model ResumeTheme {
  id            String   @id @default(cuid())
  
  // Metadata
  name          String
  description   String?  @db.Text
  
  // Author
  authorId      String
  author        User     @relation("ThemeAuthor", fields: [authorId], references: [id], onDelete: Cascade)
  
  // Categorization
  category      ThemeCategory @default(MODERN)
  tags          String[]
  
  // The actual style configuration (JSON)
  // Contains: layout, theme (colors, fonts), sections config
  styleConfig   Json
  
  // Preview assets
  thumbnailUrl  String?
  previewImages String[]
  
  // Publication status
  status        ThemeStatus @default(PRIVATE)
  isSystemTheme Boolean     @default(false) // Built-in themes that can't be deleted
  
  // Approval workflow
  approvedById  String?
  approvedBy    User?    @relation("ThemeApprover", fields: [approvedById], references: [id], onDelete: SetNull)
  approvedAt    DateTime?
  rejectionReason String? @db.Text
  
  // Stats
  usageCount    Int      @default(0)
  rating        Float?
  ratingCount   Int      @default(0)
  
  // Versioning
  version       String   @default("1.0.0")
  parentThemeId String?  // If this is a fork/customization of another theme
  parentTheme   ResumeTheme?  @relation("ThemeForks", fields: [parentThemeId], references: [id], onDelete: SetNull)
  forks         ResumeTheme[] @relation("ThemeForks")
  
  // Timestamps
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  publishedAt   DateTime?
  
  // Resumes using this theme
  resumes       Resume[] @relation("ResumeActiveTheme")
  
  @@index([authorId])
  @@index([status])
  @@index([category])
  @@index([isSystemTheme])
  @@index([usageCount])
  @@index([rating])
  @@index([createdAt])
  @@index([publishedAt])
}

